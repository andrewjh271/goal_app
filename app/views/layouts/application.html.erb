<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
      <div><%= link_to 'Home', root_path %></div>
      <h2>Goal App</h2>
      <div>
        <% if current_user %>
          <div class='account'><%= link_to 'Account', user_path(current_user) %></div>
          <div class='account'><%= link_to 'Logout', session_path, method: :delete %></div>
        <% else %>
          <div class='account'><%= link_to 'Login', new_session_path %></div>
          <div class='account'><%= link_to 'Sign Up', new_user_path %></div>
        <% end %>
      </div>
    </header>

  <body>
    <%= yield %>
  </body>
</html>
