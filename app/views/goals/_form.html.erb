<% action = edit ?  goal_url : goals_url %>
<% submit = edit ? 'Update Goal' : 'Create Goal' %>

<form action='<%= action %>' method='POST'>
  <%= auth_token %>
  <%= patch if edit %>

  <label for='title'>Title: </label>
  <input type='text' id='title' name='goal[title]' value='<%= goal.title %>'>
  <br>

  <input
    type='checkbox'
    id='completed'
    name='goal[completed]'
    value='true'
    <%= 'checked' if goal.completed %>>
  <label for='completed'>Completed</label>
  <br>

  <input
    type='checkbox'
    id='secret'
    name='goal[secret]'
    value='true'
    <%= 'checked' if goal.secret %>>
  <label for='secret'>Private</label>
  <br>

  <input type='submit' value='<%= submit %>'>
</form>